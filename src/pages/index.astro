---
import { getCollection } from 'astro:content';
import RecipePage from '../components/RecipePage.astro';

const recipes = await getCollection('recipes');
---

<RecipePage
	page={{
		currentPage: 1,
		data: recipes.slice(0, 12),
		total: recipes.length,
		size: 12,
		start: 0,
		end: 11,
		lastPage: Math.ceil(recipes.length / 12),
		url: {
			next: '/house-kitchen/recipes/page/2',
			first: undefined,
			current: '/house-kitchen/recipes/page/1',
			last: `/house-kitchen/recipes/page/${Math.ceil(recipes.length / 12)}`,
			prev: undefined,
		},
	}}
/>
