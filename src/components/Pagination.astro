---
import type { Page } from 'astro';

interface Props {
	page: Page;
}
const { page } = Astro.props;
---

<div class="flex justify-between mt-10">
	<div class="prev">
		{
			page.url.prev && (
				<a
					class="font-semibold text-blue-500 border border-blue-500 rounded-lg py-2 px-4"
					href={page.url.prev}
				>
					Prev
				</a>
			)
		}
	</div>
	<div>Page {page.currentPage} of {page.lastPage}</div>
	<div class="next">
		{
			page.url.next && (
				<a
					class="font-semibold text-blue-500 border border-blue-500 rounded-lg py-2 px-4"
					href={page.url.next}
				>
					Next
				</a>
			)
		}
	</div>
</div>
